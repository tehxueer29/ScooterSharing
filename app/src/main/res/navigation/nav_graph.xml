<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="dk.itu.moapd.scootersharing.xute.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_startRideFragment2"
            app:destination="@id/startRideFragment" />
        <action
            android:id="@+id/action_mainFragment_to_updateRideFragment2"
            app:destination="@id/updateRideFragment2" />
    </fragment>
    <fragment
        android:id="@+id/startRideFragment"
        android:name="dk.itu.moapd.scootersharing.xute.fragments.StartRideFragment"
        android:label="fragment_start_ride"
        tools:layout="@layout/fragment_start_ride" />
    <fragment
        android:id="@+id/updateRideFragment2"
        android:name="dk.itu.moapd.scootersharing.xute.fragments.UpdateRideFragment"
        android:label="fragment_update_ride"
        tools:layout="@layout/fragment_update_ride" />
</navigation>